<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion des Livres</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .search-box {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }
        .stats-card {
            border-radius: 10px;
            margin-bottom: 20px;
        }
        .table th {
            background-color: #343a40;
            color: white;
        }
        .action-buttons .btn {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <span class="navbar-brand mb-0 h1">
                <i class="fas fa-book"></i> Librairie ESPRIT
            </span>
        </div>
    </nav>

    <div class="container mt-4">
        <!-- En-tête avec titre et boutons -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="fas fa-book-open"></i> Liste des Livres</h1>
            <a href="{{ path('book_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nouveau Livre
            </a>
        </div>

        <!-- Messages flash -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        <!-- Zone de recherche -->
        <div class="search-box">
            <h5><i class="fas fa-search"></i> Recherche de Livres</h5>
            <form method="get" action="{{ path('app_books') }}" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                        <input type="text" name="search" class="form-control" 
                               placeholder="Entrez la référence du livre..." 
                               value="{{ search_ref }}">
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-search"></i> Rechercher
                    </button>
                    <a href="{{ path('app_books') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-refresh"></i> Actualiser
                    </a>
                </div>
            </form>
        </div>

        <!-- Statistiques -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card stats-card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">Livres Publiés</h5>
                                <h2 class="card-text">{{ published_count }}</h2>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-check-circle fa-3x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card stats-card bg-warning text-dark">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">Livres Non Publiés</h5>
                                <h2 class="card-text">{{ unpublished_count }}</h2>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-clock fa-3x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Menu des fonctionnalités QueryBuilder -->
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-cogs"></i> Fonctionnalités Avancées</h5>
            </div>
            <div class="card-body">
                <div class="row g-2">
                    <div class="col-md-3">
                        <a href="{{ path('authors_by_email') }}" class="btn btn-outline-primary w-100">
                            <i class="fas fa-sort-alpha-down"></i> Auteurs par Email
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="{{ path('books_by_author') }}" class="btn btn-outline-primary w-100">
                            <i class="fas fa-sort"></i> Livres par Auteur
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="{{ path('books_before_2023') }}" class="btn btn-outline-warning w-100">
                            <i class="fas fa-filter"></i> Avant 2023
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="{{ path('update_category') }}" class="btn btn-outline-danger w-100" 
                           onclick="return confirm('Êtes-vous sûr de vouloir mettre à jour Science-Fiction vers Romance?')">
                            <i class="fas fa-exchange-alt"></i> Mettre à jour Catégories
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tableau des livres -->
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="fas fa-table"></i> Liste des Livres</h5>
            </div>
            <div class="card-body">
                {% if books is empty and search_ref %}
                    <div class="alert alert-warning text-center">
                        <i class="fas fa-exclamation-triangle"></i>
                        Aucun livre trouvé avec la référence "{{ search_ref }}"
                    </div>
                {% elseif books is empty %}
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle"></i>
                        Aucun livre trouvé dans la base de données
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Title</th>
                                    <th>PublicationDate</th>
                                    <th>Published</th>
                                    <th>Category</th>
                                    <th>Author</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for book in books %}
                                <tr>
                                    <td><strong>{{ book.title }}</strong></td>
                                    <td>{{ book.publicationDate|date('F d, Y') }}</td>
                                    <td>
                                        <span class="badge {{ book.published ? 'bg-success' : 'bg-warning' }}">
                                            {{ book.published ? 'Yes' : 'No' }}
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">{{ book.category }}</span>
                                    </td>
                                    <td>
                                        <i class="fas fa-user"></i> {{ book.author.username }}
                                    </td>
                                    <td class="action-buttons">
                                        <a href="{{ path('book_show', {'id': book.id}) }}" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i> show
                                        </a>
                                        <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> edit
                                        </a>
                                        <form method="post" action="{{ path('book_delete', {'id': book.id}) }}" 
                                              style="display: inline;" 
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce livre?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                                            <button class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-5">
        <div class="container">
            <p class="mb-0">&copy; 2024 Librairie ESPRIT - Gestion de Bibliothèque</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>