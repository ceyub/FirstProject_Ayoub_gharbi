<!DOCTYPE html>
<html>
<head>
    <title>Author list</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1>Author list</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <a href="{{ path('author_new') }}" class="btn btn-primary mb-3">Add New Author</a>
        <a href="{{ path('author_add_static') }}" class="btn btn-secondary mb-3">Add Static Author</a>

        <table class="table table-striped" border="1">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Nb Books</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for author in list %}
                <tr>
                    <td>{{ author.username }}</td>
                    <td>{{ author.email }}</td>
                    <td>{{ author.nbBooks }}</td>
                    <td>
                        <a href="{{ path('author_details', {'id': author.id}) }}" class="btn btn-info btn-sm">Details</a>
                        <a href="{{ path('author_edit', {'id': author.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        <form method="post" action="{{ path('author_delete', {'id': author.id}) }}" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this author?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ author.id) }}">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">No authors found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</body>
</html>