{% extends 'base.html.twig' %}

{% block title %}Liste des Auteurs{% endblock %}

{% block body %}
    <h1>Liste des Auteurs</h1>

    {% if authors is empty %}
        <p>Aucun auteur trouvé.</p>
    {% else %}
        <table border="1" cellpadding="10" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Photo</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Nombre de livres</th>
                    <th>Détails</th>
                </tr>
            </thead>
            <tbody>
                {% set total_books = 0 %}
                {% for author in authors %}
                    <tr>
                        <td>{{ author.id }}</td>
                        <td><img src="{{ asset(author.picture) }}" alt="{{ author.username }}" width="80"></td>
                        <td>{{ author.username|upper }}</td>
                        <td>{{ author.email }}</td>
                        <td>{{ author.nb_books }}</td>
                        <td>
                            <a href="{{ path('author_details', { id: author.id }) }}">Détails</a>
                        </td>
                    </tr>
                    {% set total_books = total_books + author.nb_books %}
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
